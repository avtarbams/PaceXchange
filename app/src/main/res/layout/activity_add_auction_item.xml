<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAuctionItemActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:text="@string/add_item_to_auction"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/itemNameInputSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/addItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/itemNameInput"
            android:layout_centerVertical="true"
            android:text="@string/inventory_add_item_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/itemNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_toEndOf="@id/addItemName"
            android:inputType="text" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/itemTypeSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/userItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/item_category_type"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/userItemSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_below="@id/userItemCategory"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/returnItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/itemTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/item_return_text"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/returnItemSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_below="@id/itemTypeText"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/itemTagContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">

        <TextView
            android:id="@+id/itemTagTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tag"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/itemTagEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_toEndOf="@id/itemTagTextView"
            android:inputType="text"
            android:layout_alignBaseline="@id/itemTagTextView"/>
    </RelativeLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress"
        style="@style/SpinKitView.Large.Circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:SpinKit_Color="@color/colorPrimary" />


    <ImageView
        android:id="@+id/uploadImageThumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/uploadInventoryPicture"
        android:text="@string/take_inventory_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/submitNewItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/add_new_item_button_text"
        android:layout_marginTop="20sp"/>


</LinearLayout>